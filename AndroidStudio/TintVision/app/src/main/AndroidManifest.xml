<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.emcreations.tintvision"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:supportsRtl="true"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity
            android:name="com.emcreations.tintvision.HomeActivity"
            android:label="@string/app_name"
            android:launchMode="standard" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.emcreations.tintvision.OverlayService"
            android:enabled="true"
            android:label="@string/app_name" >
        </service>
        <service
            android:name="com.emcreations.tintvision.UnderlinerService"
            android:enabled="true"
            android:label="@string/app_name" >
        </service>

        <activity
            android:name="com.emcreations.tintvision.OverlaySettingsActivity"
            android:label="@string/title_activity_overlay_settings"
            android:parentActivityName="com.emcreations.tintvision.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.emcreations.tintvision.OverlaySettingsActivity" />
        </activity>
        <activity
            android:name="com.emcreations.tintvision.UnderlinerSettingsActivity"
            android:label="@string/title_activity_underliner_settings"
            android:parentActivityName="com.emcreations.tintvision.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.emcreations.tintvision.HomeActivity" />
        </activity>
    </application>

</manifest>
